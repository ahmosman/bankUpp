{% extends 'base.html.twig' %}

{% block title %}BankUpp - Zarejestruj się{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    {% if confirmMessage %}
        <h1>Odwiedź skrzynkę email i potwierdź rejestrację swojego konta.</h1>
    {% else %}
        <div class="form-container">
            <h1>Zarejestruj się</h1>
            {{ form_start(registrationForm) }}
            <div class="form-container-column">
                {{ form_row(registrationForm.firstName) }}
                {{ form_row(registrationForm.lastName) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.phoneNumber) }}
                {{ form_row(registrationForm.plainPassword) }}
            </div>
            <div class="form-container-column">
                {{ form_row(registrationForm.pesel) }}
                {{ form_row(registrationForm.address) }}
                {{ form_row(registrationForm.postalCode) }}
                {{ form_row(registrationForm.city) }}
                {{ form_row(registrationForm.agreeTerms) }}
                <button type="submit" class="btn btn-submit">Zarejestruj</button>
                {{ form_end(registrationForm) }}
            </div>

        </div>
    {% endif %}
{% endblock %}
