{% extends 'base.html.twig' %}

{% block title %}BankUpp - Zaloguj się{% endblock %}

{% block body %}
    <div class="form-container">
        {% if error %}
            <div class="alert alert-danger">Niepoprawne dane logowania.</div>
        {% endif %}
        {% if app.user %}
        <div class="mb-3">
            Zalogowano jako {{ app.user.username }}, <a href="{{ path('app_logout') }}">Wyloguj</a>
        </div>
        {% else %}
        <form method="post">
            <div class="form-container-column">


                    <h1>Zaloguj się!</h1>
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                           autocomplete="email" required autofocus>
                    <label for="inputPassword">Hasło</label>
                    <input type="password" name="password" id="inputPassword" class="form-control"
                           autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    #}

                    <button class="btn btn-submit" type="submit">
                        Zaloguj
                    </button>

            </div>
        </form>
        <section class="text-center"> <p>Nie masz jeszcze konta? Zarejestruj się <a href="{{ path('app_register') }}">tutaj</a></p></section>
        {% endif %}

    </div>
{% endblock %}
